<resources>

    <!-- Theme.Material.DayNight -->
    <style name="Theme.Material.DayNight.LightActionBar" parent="Theme.Material.DayNight" />

    <!-- Theme.Material.Light.LightStatusBar -->
    <style name="Theme.Material.DayNight.LightStatusBar" parent="Theme.Material.Light.LightStatusBar" />

    <!-- Variant of Theme.Material.DayNight that has a light navigation bar background with dark
         navigation bar contents. -->
    <style name="Theme.Material.DayNight.LightNavigationBar" parent="Theme.Material.DayNight">
        <item name="navigationBarColor">@color/primary_material_light</item>
        <item name="windowLightNavigationBar">true</item>
    </style>

    <!-- Variant of Theme.Material.DayNight.DarkActionBar that has a light navigation bar background with dark
         navigation bar contents. -->
    <style name="Theme.Material.DayNight.DarkActionBar.LightNavigationBar" parent="Theme.Material.DayNight.DarkActionBar">
        <item name="navigationBarColor">@color/primary_material_light</item>
        <item name="windowLightNavigationBar">true</item>
    </style>

    <!-- Variant of Theme.Material.DayNight that has a light navigation bar background with dark
         navigation bar contents. -->
    <style name="Theme.Material.DayNight.LightActionBar.LightNavigationBar" parent="Theme.Material.DayNight.LightActionBar">
        <item name="navigationBarColor">@color/primary_material_light</item>
        <item name="windowLightNavigationBar">true</item>
    </style>

    <!-- Variant of Theme.Material.DayNight.LightStatusBar that has a light navigation bar background
         with dark navigation bar contents. -->
    <style name="Theme.Material.DayNight.LightStatusBar.LightNavigationBar" parent="Theme.Material.DayNight.LightStatusBar">
        <item name="navigationBarColor">@color/primary_dark_material_light_light_status_bar</item>
        <item name="windowLightNavigationBar">true</item>
    </style>

    <!-- Theme overlay that replaces the normal control color, which by default is the same as the
         secondary text color, with the primary text color. -->
    <style name="ThemeOverlay.Material.DayNight.LightActionBar" parent="ThemeOverlay.Material.Light">
        <item name="android:colorControlNormal">?android:attr/textColorPrimary</item>
        <item name="searchViewStyle">@style/Widget.Material.SearchView.ActionBar</item>
    </style>
</resources>
